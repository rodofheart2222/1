# Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Base URL - Backend server URL
REACT_APP_API_URL=http://localhost:80

# WebSocket URL - For real-time updates
REACT_APP_WS_URL=ws://localhost:8765

# Production URLs (uncomment for production)
# REACT_APP_API_URL=https://your-api-domain.com
# REACT_APP_WS_URL=wss://your-websocket-domain.com

# App Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG_MODE=false

# Authentication (if needed)
# REACT_APP_AUTH_TOKEN=your_auth_token_here

# Additional Configuration
REACT_APP_CHART_UPDATE_INTERVAL=5000
REACT_APP_MAX_RECONNECT_ATTEMPTS=5
REACT_APP_RECONNECT_INTERVAL=3000